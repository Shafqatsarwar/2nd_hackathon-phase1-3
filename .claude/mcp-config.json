{
  "version": "1.0",
  "name": "BetterAuth Integration",
  "description": "MCP configuration for Better Auth integration with Claude Code",
  "tools": [
    {
      "name": "better_auth_client",
      "description": "Better Auth client for user authentication and session management",
      "spec": {
        "type": "function",
        "function": {
          "name": "better_auth_client",
          "description": "Interact with Better Auth for authentication operations",
          "parameters": {
            "type": "object",
            "properties": {
              "operation": {
                "type": "string",
                "enum": ["sign_in", "sign_up", "sign_out", "get_session", "get_user"],
                "description": "The authentication operation to perform"
              },
              "credentials": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User's email address"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password"
                  }
                },
                "required": ["email", "password"]
              }
            },
            "required": ["operation"]
          }
        }
      }
    },
    {
      "name": "better_auth_api",
      "description": "Better Auth API endpoints for user management",
      "spec": {
        "type": "function",
        "function": {
          "name": "better_auth_api",
          "description": "Call Better Auth API endpoints",
          "parameters": {
            "type": "object",
            "properties": {
              "endpoint": {
                "type": "string",
                "enum": ["/api/auth/sign-in", "/api/auth/sign-up", "/api/auth/session", "/api/auth/user"],
                "description": "The API endpoint to call"
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "DELETE"],
                "description": "HTTP method to use"
              },
              "data": {
                "type": "object",
                "description": "Request payload data"
              }
            },
            "required": ["endpoint", "method"]
          }
        }
      }
    }
  ]
}