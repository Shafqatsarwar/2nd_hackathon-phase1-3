{
  "version": "1.0",
  "project": {
    "name": "The Evolution of Todo - Better Auth MCP Integration",
    "description": "Full-stack todo application with Better Auth integration",
    "integrations": {
      "better_auth": {
        "enabled": true,
        "config_path": "src/frontend/auth_v3.ts",
        "api_routes": "src/frontend/app/api/auth/[...better-auth]/route.ts",
        "environment": {
          "required_vars": [
            "BETTER_AUTH_SECRET",
            "NEXT_PUBLIC_BETTER_AUTH_URL",
            "DATABASE_URL"
          ],
          "frontend_path": "src/frontend/.env.local",
          "backend_path": "src/backend/.env.backend"
        }
      }
    },
    "mcp_tools": [
      {
        "name": "better_auth_manager",
        "description": "Tool for managing Better Auth integration",
        "actions": [
          "create_user_session",
          "validate_token",
          "refresh_session",
          "logout_user"
        ]
      },
      {
        "name": "auth_debugger",
        "description": "Tool for debugging authentication issues",
        "actions": [
          "check_auth_state",
          "inspect_cookies",
          "validate_jwt",
          "test_auth_flow"
        ]
      }
    ]
  }
}